% This file implement the color schemes designed by Paul Tol
% See his original blog post for further discussion
\usepackage{pgfplots}
\pgfplotsset{compat=1.18}

% qualitative colors - medium contrast scheme
\definecolor{mcdarkblue}{HTML}{004488}
\definecolor{mcdarkred}{HTML}{994455}
\definecolor{mcdarkyellow}{HTML}{997700}
\definecolor{mclightblue}{HTML}{6699CC}
\definecolor{mclightred}{HTML}{EE99AA}
\definecolor{mclightyellow}{HTML}{EECC66}

\pgfplotscreateplotcyclelist{qualmc}{%
  {mcdarkblue,mark=*,mark options={fill=white,solid},thick},
  {mcdarkred,mark={square*},mark options={fill=white,solid},thick},
  {mcdarkyellow,mark={triangle*},mark options={fill=white,solid},thick,mark size=2.75pt},
  {mclightblue,mark=*,mark options={draw=white,solid},thick},
  {mclightred,mark={square*},mark options={draw=white,solid},thick},
  {mclightyellow,mark={triangle*},mark options={draw=white,solid},thick,mark size=2.75pt}
}
